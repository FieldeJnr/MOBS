@model Mobs.Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";

}

<div class="d-flex justify-content-center">
    <div class="col-6">
        <h2>Register</h2>
        <p>Welcome to the login page, you need to complete the form below before you can connect to the system</p>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="fullName">Full Name</label>
                @Html.TextBoxFor(m => m.FullName, new { placeholder = "Full Name", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email Address</label>
                @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "Enter Email", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail2">Confirm Email Address</label>
                @Html.TextBoxFor(m => m.ConfirmEmailAddress, new { placeholder = "Confirm Email", @class = "form-control" })
            </div>
            
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Password", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputPassword2">Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
            </div>
            @Html.CustomValidationSummary()
            //@Html.ValidationSummary()
            
            <div class="d-flex justify-content-between bd-highlight mb-3">
                <div class="p-2 bd-highlight"><a href="@Url.Action("Login","Account")" class="btn btn-outline-primary">Back</a></div>
                <div class="p-2 bd-highlight"><button type="submit" class="btn btn-outline-primary">Register Account</button></div>
            </div>
        }


    </div>
</div>